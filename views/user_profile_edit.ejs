<!DOCTYPE html>
<html lang="en">

<head>
  <title>Smart TODO!</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- External CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
    type="text/css" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/user_profile.css" />
  <link rel="stylesheet" href="/styles/user_profile_edit.css" />

  <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <!-- App JS -->
  <script defer src="/scripts/network.js"></script>
  <script defer src="/scripts/profile_edit.js"></script>

  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&family=Darumadrop+One&display=swap"
    rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>

</head>

<body>
  <nav>
    <form method="GET" action="/users/me">
      <button id="index-button" type="submit">
        <p>SMART TODO</p>
      </button>
    </form>
    <div id="categories">
      <ul>
        <li><a href="#cat-0">
            <span>To Watch</span>
          </a></li>
        <li><a href="#cat-1">
            <span>To Read</span>
          </a></li>
        <li><a href="#cat-2">
            <span>To Eat</span>
          </a></li>
        <li><a href="#cat-3">
            <span>To Buy</span>
          </a></li>
      </ul>
    </div>
    <form method="POST" action="/users/logout">
      <button type="submit" id="logout" class="button-2">Log out</button>
    </form>
  </nav>

  <div id="profile-section">
    <p>Editing Profile...</p>

    <form id="info-form" method="POST" action="/users/profile">
      <select id="selectbox" data-selected="" name="pfp_value">
        <option value="" selected="selected" disabled="disabled">Select your profile picture</option>
        <option value="1">Elephant</option>
        <option value="2">Hen</option>
        <option value="3">Shark</option>
        <option value="4">Sheep</option>
        <option value="5">Snail</option>
      </select>

      <% const imgSrc=`/avatars/${pic}` %>
        <div class="pfp-images" data-selected="">
          <span class="loader">loading image...</span>
          <span class="no-selection">no image selected</span>
          <img src="/avatars/elephant.png" data-image="1" alt="Elephant" title="Elephant" />
          <img src="/avatars/hen.png" data-image="2" alt="Hen" title="Hen" />
          <img src="/avatars/shark.png" data-image="3" alt="Shark" title="Shark" />
          <img src="/avatars/sheep.png" data-image="4" alt="Sheep" title="Sheep" />
          <img src="/avatars/snail.png" data-image="5" alt="Snail" title="Snail" />
        </div>

        <p>
          Your Name:
          <input id="username" type="text" name="name" placeholder=<%=user.name%>>
        </p>
        <p>
          Daily Reminder:
          <input id="usermotto" type="text" name="motto" placeholder=<%=user.motto%>>
        </p>

        <button id="edit-button" type="submit">Submit</button>
    </form>
  </div>

  </div>
  </div>


</body>

</html>